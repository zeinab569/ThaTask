@model COREationsTask.Dto.RegisterDto

@{
    ViewData["Title"] = "Registration";
}

  <!-- Font Icon -->
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/style.css">


<body>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <p>Sorry!- @TempData["Error"] </p>
        </div>
    }

    <div class="signup-content ">
        <div class="signup-form">
            <h2 class="form-title">Sign up</h2>
            <div class="row">

                <div class="col-md-8">
                    <form asp-action="Registration">
                        <div class="form-group">
                            <label asp-for="Fullname" class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Fullname" class="form-control" />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirmed" class="control-label"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="PasswordConfirmed" class="form-control" />
                            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            
        </div>
        <div class="signup-image">
            <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
            <a asp-action="Login" class="signup-image-link">I am already member</a>
        </div>
    </div>
</body>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
